<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="200" prefWidth="300" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.autoavaluacio_de_salut.HelloController" style="-fx-background-color: #f4f4f4; -fx-padding: 20px;">

   <children>
      <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Menú" />
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #CCCCCC; -fx-border-width: 1px;">
         <children>
            <Button fx:id="Agregar" onAction="#Agregar" mnemonicParsing="false" prefHeight="30.0" prefWidth="129.0" text="Afegir dades" style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />
            <Button fx:id="Ver" onAction="#viewStatsAction" mnemonicParsing="false" prefHeight="30.0" prefWidth="129.0" text="Veure estadístiques" style="-fx-font-size: 14px; -fx-background-color: #2196F3; -fx-text-fill: white;" />
         </children>
         <padding>
            <Insets left="20.0" right="20.0" top="20.0" bottom="20.0" />
         </padding>
      </VBox>
   </children>

</VBox>
